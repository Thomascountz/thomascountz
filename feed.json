---
layout: null
---
{
    "version": "https://jsonfeed.org/version/1",
    "title": {{ site.title | jsonify }},
    "home_page_url": "{{ site.url }}{{ site.baseurl }}/",
    "feed_url": "{{ site.url }}{{ site.baseurl }}/feed.json",
    "description": {{ site.description | jsonify }},
    "author": {
        "name": {{ site.author.name | jsonify }},
        "url": "{{ site.author.url }}"
    },
    "items": [
        {% for post in site.posts limit:36 %}
        {
            "id": "{{ site.url }}{{ post.id }}",
            "title": {{ post.title | jsonify }},
            "url": "{{ site.url }}{{ site.baseurl }}{{ post.url }}",
            "date_published": "{{ post.date | date_to_xmlschema }}",
            "summary": {{ post.description | default: post.excerpt | strip_html | strip_newlines | jsonify }},
            "content_html": {{ post.content | jsonify }}
        }{% unless forloop.last %},{% endunless %}
        {% endfor %}
    ]
}